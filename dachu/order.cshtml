                $('td').each(function () {

                    if ($(this).html() > curTime) {
                        $(this).addClass('can');
                        $(this).css({ color: '', textDecoration: 'none' })
                        $(this).removeAttr('disabled');
                    } else {
                        $(this).attr({
                            disabled: 'disabled'
                        });
                        $(this).css({ 'color': '#b9b9b9', 'text-decoration': 'line-through' })
                    }
                })
            }
        });


        $('td').click(function () {
            if ($(this).hasClass('can')) {
