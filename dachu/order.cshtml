                    //  alert('请选择服务地址');
                    sure('请选择服务地址');
                    return false;
                }
                if ($('#timeEat').val() == '') {
                    //alert('请选择用餐日期');
                    sure('请选择用餐日期');
                    return false;
                }
                else {
                    var food = "";
                    var cele = "";
                    var waiter = "";
                    var dinner = "";
                    var coupon = "";
                    if ($.cookie("Food") != null) {
                        food = $.cookie("Food")
                    }
                    if ($.cookie("Waiter") != null) {
                        waiter = $.cookie("Waiter")
                    }
                    if ($.cookie("Cele") != null) {
                        cele = $.cookie("Cele")
                    }
                    if ($.cookie("Dinner") != null) {
                        dinner = $.cookie("Dinner")
                    }
                    if ($.cookie("Coupon") != null) {
                        coupon = $.cookie("Coupon")
                    }
                    var date = $("#beginTime").val();
                    var time = $("#timeEat").val();
                    var postData =
                    {
                        foods: food,
                        dinner: dinner,
                        cele: cele,
                        waiter: waiter,
                        integral: $.cookie("jifenmoney"),
                        address: $.cookie("address"),
                        coupon: coupon,
                        time: date + " " + time + ":00",
                        phone: phone
                    }
                    var orderid = "";
                    var money = 0;

                    getAjax("/CommonModule/Q_POOrder/payorder", postData, function (data) {
                        var obj = eval('(' + data + ')');
                        var jslength = 0;
                        for (var js2 in obj) {
                            jslength++;
                        }
                        if (jslength > 0) {
                            window.location.href = 'pay';
                        }
                        else {
                            alert("系统繁忙，请重试")
                        }

                    })

                }
            //}
            //else {
            //    alert("您并未选择任何东西，无法支付");
            //}
        })
    })
    function sure(obj) {
        $('.tk').fadeIn('fast');
        $('.tk').find(".content").html(obj);
        $('.closem').click(function () {
            $('.tk').fadeOut('fast');
        });
        $('#sub').click(function () {
            $('.tk').fadeOut('fast');
        });
    }

    function jfclick() {
        if ($('#jifen').prop('checked')) {
            jifenmoney = $('#jifenmoney').html();
            payable = (amount - discount - jifenmoney).toFixed(2);
            $.cookie("jifenmoney", jifenmoney);
            //if (payable < 0) {
            //    payable = 0;
            //    $('#jifenmoney').text(moneyalls.toFixed(2));
            //}
            $('#pricetotal').text(payable);
            $('#yfje').val(payable);

        } else {
            payable = (amount - discount).toFixed(2);
            $.cookie("jifenmoney", 0);
            $('#pricetotal').text(payable);
            $('#yfje').val(payable);
        }
    }

</script>
