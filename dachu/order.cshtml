        $('td').each(function () {
            if ($(this).html() > curTime) {
                $(this).addClass('can');
            } else {
                $(this).attr({
                    disabled: 'disabled'
                });
                $(this).css({ color: '#b9b9b9', textDecoration: 'line-through' });
            }
        })
