    <script>
        var id = GetQuery("id");
        $(function () {
            getBoutique()
        })
        //加载精品生活详情
        function getBoutique() {
            AjaxJson("/CommonModule/Q_Boutique/getInfoById", { id: id }, function (data) {
                $.each(data, function (i) {
                    $("#img").attr("src", data[i].backgoungimg);
                    $("#name").html(data[i].name);
                    var tuijianxing = "";
                    for (var j = 0; j < data[i].recommend; j++) {
                        tuijianxing+="<i class='am-icon-heart'></i>"
                    }
                    $("#tuijian").html(tuijianxing);
                    $("#jieshao").html(Decode(data[i].boucontent))
                })
            })
        }
        //解码
        function Decode(str) {
            var s = "";
            if (str.length == 0) return "";
            s = str.replace(/&amp;/g, "&");
            s = s.replace(/&lt;/g, "<");
            s = s.replace(/&gt;/g, ">");
            s = s.replace(/&nbsp;/g, " ");
            s = s.replace(/&#39;/g, "\'");
            s = s.replace(/&quot;/g, "\"");
            return s;
        }
    </script>
