                        $("#gender1").attr("checked", true)
                    }
                    else if (data[i].gender == 0) {
                        $("#gender0").attr("checked", true)
                    }
                    $("#phone").val(data[i].goodsphone)
                    $("#address").val(data[i].address)
                })
            })
