                } else if ($('.detailed_address').val() == '') {
                    $('.detailed_address').focus();
                }
            }
            var reg = /^1((3|4|5|8|7){1}\d{1}|70)\d{8}$/;
            $('.redbtn')[0].onclick = function () {
