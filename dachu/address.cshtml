<script>
    var addressid = '';
    function del(id) {
        $('.tk').css('display', 'block');
        addressid = id;
    }
    $('.closetk').on('click', function () {
        $('.tk').css('display', 'none');
    })
    $('.ok').on('click', function () {
        getAjax("/CommonModule/Q_MemberAddress/delAddress", { id: addressid }, function (data) {
